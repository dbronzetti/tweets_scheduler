<div class="d-flex align-items-center justify-content-between">
  <h1>Twitter Accounts</h1>
  <%= link_to "Connect a Twitter Account", "/auth/twitter", method: :post, class: "btn btn-primary" %>
</div>

<% @twitter_accounts.each do |twitter_account| %>
  <div class="d-flex align-item-center mb-4">
    <div class="me-4">
      <%= image_tag twitter_account.image, class: "rounded-circle" %>
      <%= link_to "@#{twitter_account.username}", "http://twitter.com/#{twitter_account.username}", target: "_blank" %>
    </div>

    <%# here the button receives the twitter accounts object, because rails is smart enough to create the path instead of doing twitter_account_path(twitter_account.id) %>
    <%= button_to "Disconnect", twitter_account, method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>
